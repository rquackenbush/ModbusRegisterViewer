<UserControl x:Class="ModbusTools.SlaveExplorer.View.SlaveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
             xmlns:viewModel="clr-namespace:ModbusTools.SlaveExplorer.ViewModel"
             xmlns:view="clr-namespace:ModbusTools.SlaveExplorer.View"
             mc:Ignorable="d" 
             d:DataContext="{x:Static viewModel:ViewModelLocator.Slave}"
             DataContext="{x:Static viewModel:ViewModelLocator.Slave}"
             Background="#EAEAEA"
             d:DesignHeight="400" d:DesignWidth="900">


    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <!--<Setter Property="Foreground" Value="White"/>-->
            <Setter Property="Margin" Value="6"/>
        </Style>

        <Style TargetType="xctk:IntegerUpDown">
            <Setter Property="Margin" Value="4" />
        </Style>

    </UserControl.Resources>

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ToolBar>
            <xctk:SplitButton Content="Add" >
                <xctk:SplitButton.DropDownContent>
                    <StackPanel>
                        
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Margin" Value="2"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                        </StackPanel.Resources>
                        
                        <Button Command="{Binding Path=AddRegistersCommand}">Holding Register Range</Button>
                        <Button Command="{Binding Path=AddInputRegistersCommand}">Input Register Range</Button>
                        <!--<Button Command="{Binding Path=AddCoilsCommand}">Coil Range</Button>
                        <Button Command="{Binding Path=AddDiscretesCommand}">Discrete Range</Button>-->
                    </StackPanel>
                </xctk:SplitButton.DropDownContent>    
                
                
            </xctk:SplitButton>
            
            
        </ToolBar>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Style="{StaticResource LabelStyle}">Modbus Slave Id</TextBlock>
            <xctk:IntegerUpDown Grid.Row="0" Minimum="0" Maximum="247"  Grid.Column="1" MinWidth="60" Value="{Binding Path=SlaveId}"/>

                
                
        </Grid>

        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Background="Gray" >
            <ItemsControl ItemsSource="{Binding Path=Ranges}" x:Name="DesignerItemsControl" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <Expander Background="#EAEAEA" Margin="1,1,1,0" IsExpanded="{Binding Path=IsExpanded}">
                            <Expander.Header>
                                <TextBlock Text="{Binding Path=Name}"/>
                            </Expander.Header>
                            <view:RegisterRangeView></view:RegisterRangeView>
                        </Expander>
                        
                        
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>


        
    
</UserControl>
